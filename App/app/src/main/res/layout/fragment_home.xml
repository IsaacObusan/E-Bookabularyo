<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_margin="@dimen/high"
            >
            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kamusta, DATA"
                android:fontFamily="@font/dongle_bold"

                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_regular"
                android:autoSizeMaxTextSize="@dimen/text_header"
                android:autoSizeStepGranularity="2sp"
                android:textSize="@dimen/text_header"
                android:textColor="@color/black"
                >

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hear a story"
                android:layout_below="@+id/userName"
                android:fontFamily="@font/dongle_bold"

                android:textSize="@dimen/text_header"
                android:textColor="@color/black"
                >

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </LinearLayout>
    </RelativeLayout>
</FrameLayout>